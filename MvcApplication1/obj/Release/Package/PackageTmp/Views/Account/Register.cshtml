@model MvcApplication1.Models.RegisterModel
@{
    ViewBag.Title = "登録";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
    <h2>新しいアカウントを作成します。</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>登録フォーム</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.RegisterCode)
                @Html.PasswordFor(m => m.RegisterCode)
            </li>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NickName)
                @Html.TextBoxFor(m => m.NickName)
            </li>
            <li>
                @Html.LabelFor(m => m.Affiliation)
                @Html.TextBoxFor(m => m.Affiliation)
            </li>
            <li>
                @Html.LabelFor(m => m.Detail)
                @Html.TextBoxFor(m => m.Detail)
            </li>
            <li>
                @Html.LabelFor(m => m.MailAddress)
                @Html.TextBoxFor(m => m.MailAddress)
            </li>
            <li>
                @Html.LabelFor(m => m.CellPhoneNum)
                @Html.TextBoxFor(m => m.CellPhoneNum)
            </li>
            <li>
                @Html.LabelFor(m => m.PhoneNum)
                @Html.TextBoxFor(m => m.PhoneNum)
            </li>
        </ol>
        <input type="submit" value="登録" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
